{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/modules": ["./src/modules"],
      "@/modules/*": ["./src/modules/*"],
      "@/services": ["./src/services"],
      "@/services/*": ["./src/services/*"],
      "@/components": ["./src/components"],
      "@/components/*": ["./src/components/*"],
      "@/store": ["./src/store"],
      "@/store/*": ["./src/store/*"],
      "@/guards": ["./src/guards"],
      "@/guards/*": ["./src/guards/*"],
      "@/utils": ["./src/utils"],
      "@/utils/*": ["./src/utils/*"],
      "@/config": ["./src/config"],
      "@/config/*": ["./src/config/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
